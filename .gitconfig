[color]
  branch = auto
  diff = always
  ui = always
[color "branch"]
  current = green
  local = cyan
  remote = yellow
[color "diff"]
  meta = white
  frag = cyan bold
  func = magenta
  old = red
  new = green
  whitespace = red reverse
[color "status"]
  added = green
  changed = yellow
  updated = green
  untracked = red
[alias]
  aliases = !git config --get-regexp '^alias\\..*' | cut -c 7- | sed 's/ / = /' | sort
  s = status -sb
  st = status
  br = branch
  ci = commit
  co = checkout
  l = log --pretty=custom
  ll = log @{upstream}.. --oneline --pretty=custom
  lf = log --pretty=fuller --stat
  track = !sh -c 'git branch --track "$0" "origin/$0" && git checkout "$0"'
  # untracked = "!git ls-files --others --exclude-standard"
  # log-one = log --pretty=one --stat
  # log-files = log --stat
  # llog = log @{upstream}.. --decorate
[user]
  name = Leonardo Crauss Daronco
  email = leonardodaronco@gmail.com
[format]
  pretty = format:"%Cblue%H%Creset %Cgreen%s %Creset%n  %ad %m %ae"
[pretty]
    custom = "%C(magenta)%h%C(cyan)%d %C(yellow)%ar %C(white)%s %C(yellow)(%an)"
    #                     │        │            │            │             └─ author name
    #                     │        │            │            └─ message
    #                     │        │            └─ date (relative)
    #                     │        └─ decorations (branch, heads or tags)
    #                     └─ hash (abbreviated)
[merge]
  tool = meld
  verbosity = 3
[core]
  editor = vim
